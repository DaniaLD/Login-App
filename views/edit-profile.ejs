<!doctype html>
<html lang="en">
<head>
    <% include ./partials/head.ejs %>
    <title>Edit Profile</title>
</head>
<body>
<div class="container">
    <% include ./partials/header.ejs%>
    <div class="row">
        <% if(error_msg.length) { %>
        <div class="alert alert-danger col-lg-12"><%= error_msg %></div>
        <% } %>
    </div>
    <div class="row">
        <div class="col-lg-12" style="margin-bottom: 40px;text-align: center;">
            <h1><i class="fa fa-user" aria-hidden="true"></i> Edit Profile</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3"></div>
        <form action="/profile/edit" method="post" class="col-lg-6" style="margin-bottom: 40px;">
            <div class="form-group">
                <lable>Name</lable>
                <input type="text" name="name" class="form-control" value="<%= user.name %>">
            </div>
            <div class="form-group">
                <lable>Username</lable>
                <input type="text" name="username" class="form-control" value="<%= user.username %>">
            </div>

            <button type="submit" class="btn btn-success">Save</button>
        </form>
        <div class="col-log-3"></div>
    </div>

    <footer class="footer col-lg-12" style="text-align: center;">
        <p>&copy; 2017 , Login app by DANIAL:D</p>
    </footer>
</div>

<% include ./partials/scripts.ejs %>
</body>
</html>